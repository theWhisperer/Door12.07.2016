<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thewhispererinc.door12072016.MainActivity">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connected to Door"
        android:id="@+id/radioButton"
        android:checked="true"
        android:textSize="45sp"
        android:textColor="#5479fd"
        android:enabled="false"
        android:layout_below="@+id/radioButton5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent to Web"
        android:id="@+id/radioButton3"
        android:checked="true"
        android:textSize="45sp"
        android:textColor="#5479fd"
        android:enabled="false"
        android:layout_below="@+id/radioButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Door"
        android:id="@+id/radioButton4"
        android:checked="true"
        android:textSize="45sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#5479fd"
        android:enabled="false"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NFC Available"
        android:id="@+id/radioButton5"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/radioButton4"
        android:layout_alignEnd="@+id/radioButton4"
        android:checked="true"
        android:layout_alignParentStart="true"
        android:textSize="45sp"
        android:textColor="#5479fd"
        android:layout_alignParentLeft="true"
        android:enabled="false"/>
</RelativeLayout>
